<section id="home-page">
  <h1>Users (<%= @users.length %>)</h1>

  <ul class="users_container">
    <% @users.each do |user| %>
      <li>
        <%= link_to user, class: "user" do %>
          <%= render 'shared/user', obj: user %>
        <% end %>
        <%= render 'posts/create_post_btn', obj: user %>
      </li>
    <% end %>
  </ul>
</section>